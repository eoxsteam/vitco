<odoo>
    <data>
        <record id="import_offers_form_view" model="ir.ui.view">
            <field name="name">Import Offers</field>
            <field name="model">import.offer.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Offers">
                    <group>
                        <field name="import_option" widget="selection"/>
                        <field name="file_to_upload"/>
                    </group>
                    <group>

                        <a href="/odx_product_custom_steel/static/sample_files/offers_template.xlsx"
                                style="text-align:left">Download
                            the Sample Xls template
                        </a>

                        <a href="/odx_product_custom_steel/static/sample_files/offers_template.csv"
                                style="text-align:left">Download
                            the Sample CSV template
                        </a>

                    </group>
                    <footer>
                        <button string="Import" name="import_offer_recieved" type="object"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>

